{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "watch",
      "command": "${workspaceFolder}/node_modules/.bin/babel",
      "args": [
        "src",
        "--out-dir",
        "lib",
        "-w",
        "--source-maps",
        "--ignore",
        "'src/**/*.test.js'"
      ],
      "type": "shell",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "build-admin",
      "type": "npm",
      "script": "dev",
      "path": "public/admin/",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "isBackground": true
    }
  ]
}